{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb-base",
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["webpack.config.*.js", "tools/**"]}],
    "import/prefer-default-export": 0,
    "class-methods-use-this": 0,
    "func-names": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
  },
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "opr": true,
    "fetch": true,
    "Headers": true,
  },
}
